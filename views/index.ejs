<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form text-white p-10">
            <form action="/create" method="post">
                <input class="block w-full rounded-md px-5 py-2 bg-zinc-700 mt-2" type="text" placeholder="Title" name="title">
                <textarea class="block w-full rounded-md px-5 py-2 bg-zinc-700 resize-none mt-2" name="details" id=""
                    placeholder="Text Here"></textarea>
                <input class="mt-2 px-4 py-2 bg-blue-700 rounded-md " type="submit">
            </form>
        </div>
        <div class="px-10 tasks flex gap-3 flex-wrap">
            <% if(files.length > 0){ %>
                <% files.forEach((val)=>{ %>
                    <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-700">
                        <h1 class="text-white text-3xl tracking-tighter"> <%= val %></h1>
                       <div class=" flex w-full justify-between items-center mt-2">
                           <a href="/file/<%= val %>" class="text-blue-500 inline-block "> Read more</a>
                           <a href="/edit/<%= val %>" class="text-zinc-400">edit name</a>
                       </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <h1 class="text-white text-3xl">No Tasks Yet..</h1>
                            <% } %>
        </div>
    </div>
</body>

</html>